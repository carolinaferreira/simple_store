<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Nome</td>
            <td>Descrição</td>
            <td>Preço</td>
            <td>Quantidade</td>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td><%= product.name %></td>
                <td><%= product.description%></td>
                <td><%= product.cost%></td>
                <td><%= product.quantity%></td>
            </tr>
        <% end %>
    </tbody>
</table>
